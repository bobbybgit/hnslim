<%= turbo_frame_tag :groups_table do %>
    <table class="games_table standard_table" data-controller="table-links">
        <tr class="header_row" data-controller = "sort">
        <th data-action = "click->sort#sort" id="Name">Name</th>
        <th data-action = "click->sort#sort" id="Location">Location</th>
        <th data-action = "click->sort#sort" id="Members">Members</th>

        </tr>
    
        <% @groups.each do |group| %>
        <tr class="data_row_clickable" id="<%= group.id %>" data-action="click->table-links#group">
            <td><%= group.name %></td>
            <td><%= group.location %></td>
            <td><%= @memberships.where(group_id: group.id).present? ? @memberships.where(group_id: group.id).count : "0" %> </td>
        </tr>
        <% end %>
    </table>

    
<% end %>